%h1 Listing owners

%table.tableStandard
  %tr
    %th First name
    %th Last name
    %th{ :colspan => '3', :style => "text-align:center;"} Actions
  - @owners.each do |owner|
    %tr
      %td= owner.first_name
      %td= owner.last_name
      %td= link_to 'Show', owner
      %td= link_to 'Edit', edit_owner_path(owner)
      %td= link_to 'Destroy', owner, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Owner', new_owner_path
