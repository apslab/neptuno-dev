= semantic_form_for @consortium do |f|
  = f.semantic_errors

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :administration
    = f.input :administration_id, :label => true, :as => :select, :collection => Administration.all.map{|c| [c.name, c.id]}, :include_blank => false

  .actions
    = f.submit 'Save'
